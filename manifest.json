{
  "manifest_version": 3,
  "name": "BCast",
  "version": "0.1",
  "description": "Cast Bandcamp albums to your TV",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.bandcamp.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cast Album"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bandcamp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cast_bridge.js", "assets/*"],
      "matches": ["*://*.bandcamp.com/*"]
    }
  ]
}